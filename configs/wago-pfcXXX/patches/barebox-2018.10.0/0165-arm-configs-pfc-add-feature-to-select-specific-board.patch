+++ b/arch/arm/configs/am335x_pfc_mlo_defconfig
@@ -3,6 +3,10 @@ CONFIG_OMAP_BUILD_IFT=y
 CONFIG_OMAP_SERIALBOOT=y
 CONFIG_OMAP_MULTI_BOARDS=y
