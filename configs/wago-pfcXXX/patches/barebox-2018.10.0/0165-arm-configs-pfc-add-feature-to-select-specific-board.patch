+CONFIG_MACH_WAGO_PFC_AM335X_750_810x=y
+CONFIG_MACH_WAGO_PFC_AM335X_750_8208=y
+CONFIG_MACH_WAGO_PFC_AM335X_750_821x=y
+CONFIG_MACH_WAGO_PFC_AM335X_2850_311x=y
