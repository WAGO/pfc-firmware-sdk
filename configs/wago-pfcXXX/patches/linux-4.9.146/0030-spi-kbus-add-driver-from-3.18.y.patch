+int kbus_wait_for_gpio(int gpio)
+{
+	unsigned long timeout;
+
+	timeout = jiffies + msecs_to_jiffies(1); /* 1000 ? */
+	while (gpio_get_value(gpio)) { /* active low */
+		if (time_after(jiffies, timeout))
+			return -1;
+		cpu_relax();
+	}
+	return 0;
+}
