+	/* create message and add transfer to it */
+	spi_message_init(&msg);
+	spi_message_add_tail(&spi_t[0], &msg);
+
+	trace_pxc_kbusmsg(__func__, &msg, "");
+	status = kbus_spi_sync(kdrvdata->spi, &msg);
+	if (status && kbinary->rx_buf)
