[system]
compatible=@RAUC_BUNDLE_COMPATIBLE@
bootloader=barebox
mountprefix=/mnt/rauc
variant-name=PFC
barebox-statename=bootstate

[keyring]
path=/etc/rauc/ca.cert.pem

[slot.rootfs.1]
device=/dev/ubi0_0
type=ubifs
bootname=rootfs.1
force-install-same=true

[slot.rootfs.2]
device=/dev/ubi0_2
type=ubifs
bootname=rootfs.2
force-install-same=true

[slot.home.0]
device=/dev/null
type=raw
force-install-same=true

[slot.bootloader.0]
device=/dev/null
type=raw
force-install-same=true

